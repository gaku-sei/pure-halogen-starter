{
  "name": "pure-halogen-starter",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Kevin COMBRIAT <kevin@sc0ville.com>",
  "license": "MIT",
  "scripts": {
    "start": "parcel dev/index.html",
    "build": "parcel build dev/index.html",
    "tailwind:generate": "tailwind-generator -l purescript -c ./tailwind.config.js --cssInput ./assets/input.css --cssOutput ./dev/styles.css --output ./src/",
    "graphql:generate": "rm -fr src/Api && purescript-graphql-client-generator --input-url https://countries.trevorblades.com --output src/Api --api Api"
  },
  "dependencies": {
    "@scoville/tailwind-generator": "https://github.com/scoville/tailwind-generator",
    "parcel-bundler": "^1.12.4",
    "purescript-graphql-client": "git+https://github.com/purescript-graphql-client/purescript-graphql-client"
  },
  "devDependencies": {
    "tailwind": "^4.0.0"
  }
}
